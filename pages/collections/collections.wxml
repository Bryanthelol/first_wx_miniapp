<!--collections.wxml-->
<view class="collections-list">
    <!-- 如果还没有收藏书籍，则显示此信息 -->
    <!-- <view class="hidden" hidden="{{hideOrNot}}">还没有收藏书籍，赶快去吧！</view> -->

    <!-- 收藏书籍的列表 -->
    <view
        wx:for="{{collections}}"
        bindtap="navigateToDetail"
        data-id="{{item.id}}"
        class="collections-item">
        <image class="cover" src="{{item.image}}" />
        <view class="title">《{{item.title}}》</view>
    </view>
</view>
