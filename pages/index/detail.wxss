/* pages/index/detail.wxss */

/*

目录:
（目录顺序按功能添加时间排列）

0 页面背景色设置

1 书籍详情的容器，用以设置整体样式

2 各个具体内容的样式

3 设置表单form及其内部组件的样式

4 设置心得列表的样式

5 设置『收藏』按钮的样式


*/


/* 0 页面背景色设置 */
page {
    background-color: #eff3f9;
}

/* 1 书籍详情的容器，用以设置整体样式 */
.book-detail {
    padding: 50rpx;
    font-size: 40rpx;
    font-family: sans-serif;
    text-align: center;
    line-height: 1.8;
}


/* 2 各个具体内容的样式 */
.title {
    font-size: 1.2em;
}

.cover {
    width: 300rpx;
    height: 430rpx;
    border-style: groove;
    margin-top: 20rpx;
    box-shadow:8rpx 12rpx 8rpx #c3d5f4;
}

.rating {
    margin-top: 50rpx;
}

.ratingpeople {

}

.author {
    text-align: left;
    margin-top: 30rpx;
}

.authorintro  {
    text-align: justify;
    font-size: 0.9em;
    margin-top: 15rpx;
}

.pubdate  {
    text-align: justify;
    margin-top: 30rpx;
}

.publisher  {
    text-align: justify;
}

.pages  {
    text-align: justify;
    margin-top: 30rpx;
}

.price  {
    text-align: justify;
}

.summary {
    text-align: justify;
    margin-top: 40rpx;
}

.hidden {
    margin-top: 90rpx;
    font-family: monospace;
    font-weight: lighter;
    color: #c3d5f4;
}

/* 3 设置表单form及其内部组件的样式 */
.form {
    margin-top: 65rpx;
}

.textarea {
    background-color: #f6f6f6;
    text-align: left;
    padding: 15rpx;
}

.button {
    margin-top: 50rpx;
}

.button-one {
    margin-top: 25rpx;
}

.button-two {
    margin-top: 25rpx;
}

/* 4 设置心得列表的样式 */
.comment-name {
    margin-top: 50rpx;
    text-align: left;
    font-weight: bold;
}

.comment-list {
    line-height: 1.8;
    margin-top: 30rpx;
    border-top: 2rpx solid #ccc;
    text-align: justify;
}

.comment-item  {
    display: block;
    border-bottom: 2rpx solid #ccc;
}

/* 5 设置『收藏』按钮的样式 */
.collection-button {
    margin-top: 50rpx;
    margin-bottom: 40rpx;
}
